<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--item name="android:textColor">@color/custom_colors</item>
        <item name="android:listDivider">@android:color/white</item>
        <item name="android:background">@android:color/black</item-->
    </style>

    <style name="NavigationView"  parent="Base.Theme.AppCompat">
        <item name="android:textColor">@color/custom_colors</item>
        <item name="android:listDivider">@android:color/white</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#A8A8A8</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:dialogMessage">?android:attr/textAppearanceMediumInverse</item>

    </style>

    <style name="splashScreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="MySwitch" parent="ThemeOverlay.AppCompat.Light">x
    </style>
</resources>
