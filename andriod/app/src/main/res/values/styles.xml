<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/common_google_signin_btn_text_light</item>
        <item name="android:itemBackground">@color/common_google_signin_btn_text_dark</item>       <!-- Customize your theme here. -->
    </style>

    <style name="FilterMenuTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/common_google_signin_btn_text_light</item>
        <item name="android:itemBackground">@color/common_google_signin_btn_text_dark</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#A8A8A8</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:dialogMessage">?android:attr/textAppearanceMediumInverse</item>

    </style>

    <style name="splashScreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="MySwitch" parent="ThemeOverlay.AppCompat.Light">x
    </style>
</resources>
