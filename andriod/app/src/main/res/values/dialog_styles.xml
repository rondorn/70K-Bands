<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark dialog theme matching iOS style -->
    <style name="DarkDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">#000000</item>
        <item name="android:windowBackground">#000000</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
        <item name="colorAccent">#007AFF</item>
        <item name="android:buttonBarButtonStyle">@style/DarkDialogButton</item>
    </style>
    
    <!-- Dark dialog button style -->
    <style name="DarkDialogButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#007AFF</item>
    </style>
</resources>
