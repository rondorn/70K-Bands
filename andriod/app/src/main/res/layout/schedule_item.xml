<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    android:padding="0dp">

    <!-- First Row: Location, Attended Icon, Start Time, Day -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Venue Color Bar -->
        <View
            android:id="@+id/venue_color_bar"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

        <!-- Location -->
        <TextView
            android:id="@+id/location_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.62"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:background="@android:color/black"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingEnd="4dp" />

        <!-- Attended Icon -->
        <ImageView
            android:id="@+id/attended_icon"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_weight="0.07"
            android:background="@android:color/black"
            android:contentDescription="Attended Status"
            android:visibility="gone"
            android:scaleType="fitCenter" />

        <!-- Start Time -->
        <TextView
            android:id="@+id/start_time_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:background="@android:color/black"
            android:gravity="center_vertical|end"
            android:paddingEnd="8dp" />

        <!-- Day Label -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.07"
            android:text="Day"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:background="#888888"
            android:gravity="center" />

    </LinearLayout>

    <!-- Second Row: Event Type, Event Type Icon, End Time, Day Number -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:minHeight="21dp">

        <!-- Venue Color Bar -->
        <View
            android:id="@+id/venue_color_bar_2"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

        <!-- Event Type and Notes Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.64"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="4dp">

            <!-- Event Type -->
            <TextView
                android:id="@+id/event_type_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:background="@android:color/black"
                android:gravity="end"
                android:visibility="gone" />

            <!-- Event Notes -->
            <TextView
                android:id="@+id/event_notes_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:background="@android:color/black"
                android:gravity="start" />

        </LinearLayout>

        <!-- Event Type Icon -->
        <ImageView
            android:id="@+id/event_type_icon"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_weight="0.07"
            android:background="@android:color/black"
            android:contentDescription="Event Type"
            android:visibility="gone"
            android:scaleType="fitCenter" />

        <!-- End Time -->
        <TextView
            android:id="@+id/end_time_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:textColor="#888888"
            android:textSize="14sp"
            android:background="@android:color/black"
            android:gravity="center_vertical|end"
            android:paddingEnd="8dp" />

        <!-- Day Number -->
        <TextView
            android:id="@+id/day_number_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.07"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:background="#888888"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>