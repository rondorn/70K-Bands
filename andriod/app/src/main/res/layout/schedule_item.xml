<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    android:padding="0dp">

    <!-- First Row: Location, Attended Icon, Start Time, Day -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="19dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:baselineAligned="false">

        <!-- Venue Color Bar -->
        <View
            android:id="@+id/venue_color_bar"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

        <!-- Location - flexible width with ellipsize -->
        <TextView
            android:id="@+id/location_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:background="@android:color/black"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingEnd="4dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp" />

        <!-- Attended Icon - fixed width -->
        <ImageView
            android:id="@+id/attended_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@android:color/black"
            android:contentDescription="Attended Status"
            android:visibility="gone"
            android:scaleType="fitCenter"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

        <!-- Start Time - wraps content, aligns to end -->
        <TextView
            android:id="@+id/start_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="60dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:maxLines="1"
            android:background="@android:color/black"
            android:gravity="center_vertical|end"
            android:paddingStart="8dp"
            android:paddingEnd="4dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp" />

        <!-- Day Label - fixed width -->
        <TextView
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:minHeight="19dp"
            android:text="Day"
            android:textColor="@android:color/white"
            android:textSize="11sp"
            android:maxLines="1"
            android:background="#888888"
            android:gravity="center"
            android:paddingTop="1dp"
            android:paddingBottom="1dp" />

    </LinearLayout>

    <!-- Second Row: Event Type, Event Type Icon, End Time, Day Number -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:minHeight="19dp"
        android:baselineAligned="false">

        <!-- Venue Color Bar -->
        <View
            android:id="@+id/venue_color_bar_2"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

        <!-- Event Type and Notes Container - flexible width -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="4dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp">

            <!-- Event Type -->
            <TextView
                android:id="@+id/event_type_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:background="@android:color/black"
                android:gravity="start"
                android:visibility="gone" />

            <!-- Event Notes -->
            <TextView
                android:id="@+id/event_notes_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:background="@android:color/black"
                android:gravity="start" />

        </LinearLayout>

        <!-- Event Type Icon - fixed width -->
        <ImageView
            android:id="@+id/event_type_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@android:color/black"
            android:contentDescription="Event Type"
            android:visibility="gone"
            android:scaleType="fitCenter"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

        <!-- End Time - wraps content -->
        <TextView
            android:id="@+id/end_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="60dp"
            android:textColor="#888888"
            android:textSize="14sp"
            android:maxLines="1"
            android:background="@android:color/black"
            android:gravity="center_vertical|end"
            android:paddingStart="8dp"
            android:paddingEnd="4dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp" />

        <!-- Day Number - fixed width matching Day Label -->
        <TextView
            android:id="@+id/day_number_text"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:minHeight="19dp"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:maxLines="1"
            android:background="#888888"
            android:gravity="center"
            android:paddingTop="1dp"
            android:paddingBottom="1dp" />

    </LinearLayout>

</LinearLayout>