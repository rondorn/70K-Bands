<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF000000"
    android:id="@+id/showBandsView"
    android:theme="@style/NavigationView"
    android:gravity="top"
    android:fitsSystemWindows="true">

    <!-- Download Report Button in upper left corner -->
    <Button
        android:id="@+id/downloadReportButton"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="ðŸ“Š Stats"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:background="#FF404040"
        android:contentDescription="View Report Dashboard" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/headerBandCount"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:width="200dp"
            android:gravity="center"
            android:text="70,000 Tons"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textStyle="bold" />


        <ImageButton
            android:id="@+id/preferences"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:width="32dp"
            android:height="40dp"
            android:src="@drawable/icon_gear"
            android:text="prefs"
            android:layout_marginRight="12dp"
            android:background="@android:color/black"
            android:scaleType="fitEnd"/>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="65dp"
        android:background="#FF000000">

        <Button
            android:id="@+id/FilerMenu"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="150dp"
            android:background="@color/common_google_signin_btn_text_light_pressed"
            android:gravity="left"
            android:text="Filters"
            android:textColor="#A2AAAD"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large"
            android:drawableLeft="@drawable/ic_menu_copy"
            android:textOff="Filters"
            android:textOn="Filters"
            android:textSize="25sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchCriteria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            app:iconifiedByDefault="false"
            app:queryHint="@string/SearchCritiera"
            app:searchIcon="@drawable/search_icon" />

        <Button
            android:id="@+id/shareButton"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="2dp"
            android:gravity="right"
            android:background="@drawable/icon_share"
            android:text=""
            android:layout_alignParentEnd="true"/>
        />

    </RelativeLayout >

    <RelativeLayout
        android:id="@+id/listViewLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="110dp"
        android:layout_marginRight="5dp"
        android:background="#FF000000"
        android:orientation="horizontal">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/swiperefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.baoyz.swipemenulistview.SwipeMenuListView
                android:id="@+id/bandNames"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:background="#FF000000"
                android:cacheColorHint="@android:color/transparent"
                android:clickable="true"
                android:listSelector="@android:color/transparent"
                android:stackFromBottom="false" />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </RelativeLayout>

</RelativeLayout>
