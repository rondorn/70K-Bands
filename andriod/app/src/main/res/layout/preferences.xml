<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#1C1C1E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp">

        <!-- Main Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="#1C1C1E">
            
            <TextView
                android:id="@+id/preferenceHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/PreferenceHeader"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center" />
        </LinearLayout>

        <!-- SHOW/HIDE EXPIRED Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <!-- Section Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/showHideExpiredLabel"
                android:textSize="13sp"
                android:textColor="#8E8E93"
                android:textStyle="normal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:textAllCaps="true" />

            <!-- Section Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#2C2C2E"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:elevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/hideExpiredEvents"
                        android:textSize="17sp"
                        android:textColor="#FFFFFF" />

                    <Switch
                        android:id="@+id/hideExpiredEvents"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/ModernSwitch" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- PROMPT FOR ATTENDED STATUS Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="35dp">

            <!-- Section Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/PromptForAttendedStatusHeader"
                android:textSize="13sp"
                android:textColor="#8E8E93"
                android:textStyle="normal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:textAllCaps="true" />

            <!-- Section Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#2C2C2E"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:elevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/PromptForAttendedStatus"
                        android:textSize="17sp"
                        android:textColor="#FFFFFF" />

                    <Switch
                        android:id="@+id/promptForAttendedStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/ModernSwitch" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- ALERT PREFERENCES Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="35dp">

            <!-- Section Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/AlertPreferences"
                android:textSize="13sp"
                android:textColor="#8E8E93"
                android:textStyle="normal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:textAllCaps="true" />

            <!-- Section Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#2C2C2E"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:elevation="1dp">

                <!-- Alert On Must See Bands -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/AlertOnMustSeeBands"
                        android:textSize="17sp"
                        android:textColor="#FFFFFF" />

                    <Switch
                        android:id="@+id/mustSeecheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/ModernSwitch" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#3A3A3C"
                    android:layout_marginLeft="16dp" />

                <!-- Alert On Might See Bands -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/AlertOnMightSeeBands"
                        android:textSize="17sp"
                        android:textColor="#FFFFFF" />

                    <Switch
                        android:id="@+id/mightSeecheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/ModernSwitch" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#3A3A3C"
                    android:layout_marginLeft="16dp" />

                <!-- Alert Only for Will Attend Events -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/alertOnlyForShowWillAttend"
                        android:textSize="17sp"
                        android:textColor="#FFFFFF" />

                    <Switch
                        android:id="@+id/alertOnlyForShowWillAttendSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/ModernSwitch" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#3A3A3C"
                    android:layout_marginLeft="16dp" />

                <!-- Minutes Before Event to Alert -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/MinutesBeforeEventtoAlert"
                        android:textSize="17sp"
                        android:textColor="#FFFFFF" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="#1C1C1E"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                        <EditText
                            android:id="@+id/minBeforeEvent"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textSize="17sp"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#8E8E93"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:maxLength="3" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#3A3A3C"
                    android:layout_marginLeft="16dp" />

                <!-- Alert For Shows -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/AlertForShows"
                        android:textSize="17sp"
                        android:textColor="#FFFFFF" />

                    <Switch
                        android:id="@+id/alertForShows"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/ModernSwitch" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#3A3A3C"
                    android:layout_marginLeft="16dp" />

                <!-- Alert For Special Events -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/AlertForSpecialEvents"
                        android:textSize="17sp"
                        android:textColor="#FFFFFF" />

                    <Switch
                        android:id="@+id/alertForSpecialEvents"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/ModernSwitch" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#3A3A3C"
                    android:layout_marginLeft="16dp" />

                <!-- Alert For Unofficial Events -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/AlertForUnoffical"
                        android:textSize="17sp"
                        android:textColor="#FFFFFF" />

                    <Switch
                        android:id="@+id/alertForUnofficalEvents"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/ModernSwitch" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#3A3A3C"
                    android:layout_marginLeft="16dp" />

                <!-- Alert For Meeting and Greet Events -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/AlertForMeetingandGreetEvents"
                        android:textSize="17sp"
                        android:textColor="#FFFFFF" />

                    <Switch
                        android:id="@+id/alertForMeetAndGreet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/ModernSwitch" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#3A3A3C"
                    android:layout_marginLeft="16dp" />

                <!-- Alert For Clinics -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/AlertForClinics"
                        android:textSize="17sp"
                        android:textColor="#FFFFFF" />

                    <Switch
                        android:id="@+id/alertForClinics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/ModernSwitch" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#3A3A3C"
                    android:layout_marginLeft="16dp" />

                <!-- Alert For Album Listening Events -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/AlertForAlbumListeningEvents"
                        android:textSize="17sp"
                        android:textColor="#FFFFFF" />

                    <Switch
                        android:id="@+id/alertForAlbumListen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/ModernSwitch" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- DETAILS SCREEN Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="35dp">

            <!-- Section Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/DetailsScreen"
                android:textSize="13sp"
                android:textColor="#8E8E93"
                android:textStyle="normal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:textAllCaps="true" />

            <!-- Section Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#2C2C2E"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:elevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/NoteFontSizeLarge"
                        android:textSize="17sp"
                        android:textColor="#FFFFFF" />

                    <Switch
                        android:id="@+id/noteFontSizeLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/ModernSwitch" />
                </LinearLayout>

                <!-- Separator Line -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#3A3A3C"
                    android:layout_marginLeft="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/OpenYouTubeApp"
                        android:textSize="17sp"
                        android:textColor="#FFFFFF" />

                    <Switch
                        android:id="@+id/openYouTubeApp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:theme="@style/ModernSwitch" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- MISC Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="35dp">

            <!-- Section Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Misc"
                android:textSize="13sp"
                android:textColor="#8E8E93"
                android:textStyle="normal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:textAllCaps="true" />

            <!-- Section Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#2C2C2E"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:elevation="1dp">

                <!-- Select The Year To Display -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/SelectYearLabel"
                        android:textSize="17sp"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/eventYearButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current"
                        android:textSize="17sp"
                        android:textColor="#007AFF"
                        android:background="@android:color/transparent"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:paddingLeft="0dp"
                        android:paddingRight="0dp" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#3A3A3C"
                    android:layout_marginLeft="16dp" />

                <!-- Import Data Backup (Android Exclusive) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/importButtonName"
                        android:textSize="17sp"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/ImportDataBackup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ImportDataBackup"
                        android:textSize="17sp"
                        android:textColor="#007AFF"
                        android:background="@android:color/transparent"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:paddingLeft="0dp"
                        android:paddingRight="0dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Explanation text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/LastYearsFeatureExplication"
                android:textSize="13sp"
                android:textColor="#8E8E93"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:lineSpacingMultiplier="1.2" />
        </LinearLayout>

        <!-- Information Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="35dp">

            <!-- Section Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Information"
                android:textSize="13sp"
                android:textColor="#8E8E93"
                android:textStyle="normal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:textAllCaps="true" />

            <!-- Section Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#2C2C2E"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:elevation="1dp">

                <!-- User Identifier -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/UserIdentifier"
                        android:textSize="17sp"
                        android:textColor="#FFFFFF"
                        android:paddingBottom="4dp" />

                    <TextView
                        android:id="@+id/userIdentifier"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#8E8E93" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#3A3A3C"
                    android:layout_marginLeft="16dp" />

                <!-- Build Number -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Build"
                        android:textSize="17sp"
                        android:textColor="#FFFFFF"
                        android:paddingBottom="4dp" />

                    <TextView
                        android:id="@+id/buildNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#8E8E93" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Advanced Settings Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="35dp">

            <!-- Section Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/AdvancedPreferences"
                android:textSize="13sp"
                android:textColor="#8E8E93"
                android:textStyle="normal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp"
                android:textAllCaps="true" />

            <!-- Section Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#2C2C2E"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:elevation="1dp">

                <!-- Bands URL -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bands URL"
                        android:textSize="17sp"
                        android:textColor="#FFFFFF"
                        android:paddingBottom="4dp" />

                    <EditText
                        android:id="@+id/bandsUrl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#8E8E93"
                        android:background="@android:color/transparent"
                        android:inputType="textNoSuggestions" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#3A3A3C"
                    android:layout_marginLeft="16dp" />

                <!-- Schedule URL -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Schedule URL"
                        android:textSize="17sp"
                        android:textColor="#FFFFFF"
                        android:paddingBottom="4dp" />

                    <EditText
                        android:id="@+id/scheduleUrl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#8E8E93"
                        android:background="@android:color/transparent"
                        android:inputType="textNoSuggestions" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#3A3A3C"
                    android:layout_marginLeft="16dp" />

                <!-- Pointer URL -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pointer URL"
                        android:textSize="17sp"
                        android:textColor="#FFFFFF"
                        android:paddingBottom="4dp" />

                    <EditText
                        android:id="@+id/pointerUrl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#8E8E93"
                        android:background="@android:color/transparent"
                        android:inputType="textNoSuggestions" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Bottom Spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="35dp" />

    </LinearLayout>
</ScrollView>