<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="#FF000000"
    android:id="@+id/Cell">

    <TextView
        android:id="@+id/bandNameInCellNoSchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="15dp"
        android:height="40dp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:ellipsize="end"
        android:gravity="left"
        android:inputType="none"
        android:maxLines="1"
        android:text="Band Name"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_widthPercent="80%" />

    <ImageView
        android:id="@+id/rankingInCellnoSchedule"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:width="35dp"
        android:height="35dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="8dp"
        android:background="#FF000000"
        android:src="@drawable/icon_going_yes"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/bandNameInCell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp"
        android:height="30dp"
        android:text="Band Name"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:ellipsize="end"
        android:gravity="left"
        android:inputType="none"
        android:maxLines="1"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_widthPercent="80%"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="1dp" />

    <TextView
        android:id="@+id/locationInCell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="42dp"
        android:height="28dp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeMinTextSize="5sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:text="Location"
        android:textColor="#D3D3D3"
        android:width="157dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="6dp" />

    <TextView
        android:id="@+id/locationColorInCell"
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="42dp"
        android:height="28dp"
        android:background="#FFC4AC00"
        android:text=""
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp" />

    <ImageView
        android:id="@+id/eventTypeInCell"
        android:layout_width="18dp"
        android:layout_height="21dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="44dp"
        android:contentDescription="The Event Type Icon"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_all_star_jam"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="160dp" />

    <ImageView
        android:id="@+id/rankingInCell"
        android:layout_width="18dp"
        android:layout_height="21dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="44dp"
        android:background="#FF000000"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_going_yes"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="185dp" />

    <ImageView
        android:id="@+id/attendedInCell"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp"
        android:background="#FF000000"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_seen"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="211dp" />

    <TextView
        android:id="@+id/timeInCell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:height="30dp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:ellipsize="end"
        android:gravity="right"
        android:inputType="none"
        android:maxLines="1"
        android:text="Time"
        android:textAlignment="gravity"
        android:textColor="#D3D3D3"
        android:textSize="10pt"
        android:textStyle="bold"
        app:layout_widthPercent="22%"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="237dp" />

    <TextView
        android:id="@+id/dayLabelInCell"
        android:layout_width="43dp"
        android:layout_height="22dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:height="25dp"
        android:width="43dp"
        android:gravity="center"
        android:textAlignment="gravity"
        android:text="Day"
        android:textColor="#ffffff"
        android:background="#838383"
        android:textSize="5pt"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="319dp" />

    <TextView
        android:id="@+id/dayInCell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="21dp"
        android:height="47dp"
        android:width="43dp"
        android:gravity="center"
        android:textAlignment="gravity"
        android:text="2/28"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="#838383"
        android:autoSizeMaxTextSize="50sp"
        android:autoSizeMinTextSize="1sp"
        android:autoSizeStepGranularity="1sp"
        android:autoSizeTextType="uniform"
        android:inputType="none"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginLeft="319dp"
        android:layout_alignParentRight="true" />


    <TextView
        android:id="@+id/bottomSpacer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:height="2dp"
        android:width="44dp"
        android:layout_marginTop="68dp"
        android:gravity="center"
        android:textAlignment="gravity"
        android:background="#838383"
        android:inputType="none"
        android:ellipsize="end"
        />
</android.support.percent.PercentRelativeLayout>