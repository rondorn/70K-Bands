<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#404040">

    <!-- Title bar with darker grey background -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#303030"
        android:padding="20dp">
        
        <TextView
            android:id="@+id/edit_note_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Note for Band"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textStyle="bold" />
            
    </LinearLayout>

    <!-- Note editing area with lighter grey background -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#606060"
        android:padding="20dp">
        
        <EditText
            android:id="@+id/edit_note_input"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#505050"
            android:textColor="#FFFFFF"
            android:textColorHint="#CCCCCC"
            android:hint="Double click to add your own notes"
            android:gravity="top|start"
            android:inputType="textMultiLine"
            android:padding="16dp"
            android:textSize="16sp"
            android:scrollbars="vertical"
            android:maxLines="10"
            android:layout_margin="8dp" />

        <!-- Text editing buttons row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center">

            <Button
                android:id="@+id/select_all_button"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="SELECT ALL"
                android:textColor="#FFFFFF"
                android:background="#505050"
                android:textStyle="bold"
                android:textSize="10sp"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/cut_button"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="CUT"
                android:textColor="#FFFFFF"
                android:background="#505050"
                android:textStyle="bold"
                android:textSize="10sp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp" />

            <Button
                android:id="@+id/copy_button"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="COPY"
                android:textColor="#FFFFFF"
                android:background="#505050"
                android:textStyle="bold"
                android:textSize="10sp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp" />

            <Button
                android:id="@+id/paste_button"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="PASTE"
                android:textColor="#FFFFFF"
                android:background="#505050"
                android:textStyle="bold"
                android:textSize="10sp"
                android:layout_marginStart="4dp" />

        </LinearLayout>
            
    </LinearLayout>

    <!-- Button bar with darker grey background -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#303030"
        android:padding="20dp"
        android:gravity="center">
        
        <Button
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="CANCEL"
            android:textColor="#FFFFFF"
            android:background="#505050"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:textSize="16sp" />
            
        <Button
            android:id="@+id/save_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="SAVE NOTE"
            android:textColor="#FFFFFF"
            android:background="#505050"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:textSize="16sp" />
            
    </LinearLayout>

</LinearLayout>
