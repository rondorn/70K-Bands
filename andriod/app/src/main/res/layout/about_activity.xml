<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#1C1C1E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- About Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about"
            android:textSize="34sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:paddingBottom="20dp" />

        <!-- Main Description -->
        <TextView
            android:id="@+id/about_description1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_description1"
            android:textSize="17sp"
            android:textColor="#FFFFFF"
            android:lineSpacingMultiplier="1.4"
            android:paddingBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_description3"
            android:textSize="17sp"
            android:textColor="#FFFFFF"
            android:lineSpacingMultiplier="1.4"
            android:paddingBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_description4"
            android:textSize="17sp"
            android:textColor="#FFFFFF"
            android:lineSpacingMultiplier="1.4"
            android:paddingBottom="16dp" />

        <!-- Copyright -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_copyright"
            android:textSize="13sp"
            android:textColor="#8E8E93"
            android:paddingTop="10dp"
            android:paddingBottom="20dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#3A3A3C"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp" />

        <!-- The Team Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_the_team"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:paddingBottom="16dp" />

        <!-- Team Members -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_team_ron_dorn"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:paddingBottom="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_role_lead_developer"
                android:textSize="13sp"
                android:textColor="#8E8E93"
                android:paddingBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_team_robert_jan"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:paddingBottom="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_role_ui_designer"
                android:textSize="13sp"
                android:textColor="#8E8E93"
                android:paddingBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_team_aaron"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:paddingBottom="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_role_curator"
                android:textSize="13sp"
                android:textColor="#8E8E93"
                android:paddingBottom="20dp" />
        </LinearLayout>

        <!-- Team Photo -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/about_team"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="@string/about_team_photo" />

        <!-- Bottom Spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="30dp" />

    </LinearLayout>
</ScrollView>
