# Uncomment this line to define a global platform for your project
platform :ios, '15.0'
# Uncomment this line if you're using Swift
use_frameworks!

# Require CocoaPods 1.12.0 or higher for privacy manifest support
install! 'cocoapods', :warn_for_unused_master_specs_repo => false

target '70K Bands' do
	# Firebase 10.22.0+ includes privacy manifests (required for App Store)
	pod 'Firebase/Core', '~> 10.22.0'
	pod 'Firebase/Messaging', '~> 10.22.0'
	pod 'Firebase/Database', '~> 10.22.0'
        pod 'AWSSNS', '~> 2.3.0'
        pod 'Bolts'
        pod 'SQLite.swift', '~> 0.15.3'
end

target 'MDF Bands' do
	# Firebase 10.22.0+ includes privacy manifests (required for App Store)
	pod 'Firebase/Core', '~> 10.22.0'
	pod 'Firebase/Messaging', '~> 10.22.0'
	pod 'Firebase/Database', '~> 10.22.0'
        pod 'AWSSNS', '~> 2.3.0'
        pod 'Bolts'
        pod 'SQLite.swift', '~> 0.15.3'
end

target '70K BandsTests' do
        # Firebase 10.22.0+ includes privacy manifests (required for App Store)
        pod 'Firebase/Core', '~> 10.22.0'
        pod 'Firebase/Messaging', '~> 10.22.0'
	pod 'Firebase/Database', '~> 10.22.0'
        pod 'AWSSNS', '~> 2.3.0'
        pod 'Bolts'
        pod 'SQLite.swift', '~> 0.15.3'
end

post_install do |installer|
    installer.generated_projects.each do |project|
          project.targets.each do |target|
              target.build_configurations.each do |config|
                  config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
               end
          end
   end
end
